{% extends 'base.html.twig' %}

{% block title %}Jeux de société!{% endblock %}

{% block body %}
<h1>Liste des jeux de société</h1>

    <ul>
        {% for board_game in board_games %}
            <li>{{ board_game.name }}</li>
            <a href="{{ path('app_boardgame_show',{ idJeu: board_game.id }) }}">Voir le jeu</a>
        {% endfor %}
    </ul>
{% endblock %}
